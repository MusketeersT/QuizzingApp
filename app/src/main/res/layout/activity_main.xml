<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/background">

    <ImageView
        android:id="@+id/idIVQuiz"
        android:layout_width="320dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="0dp"
        android:src="@drawable/quiz_icon"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Choose Topic"
        android:textColor="@color/white"
        android:textSize="32dp"
        android:id="@+id/idTVChooseTopic"
        android:paddingHorizontal="10dp"
        android:layout_below="@id/idIVQuiz"
        android:textStyle="bold"
        android:layout_marginTop="0dp"
        android:layout_centerHorizontal="true"/>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/idTVChooseTopic"
        android:padding="5dp"
        android:id="@+id/idLLLyout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingVertical="5dp"
                android:id="@+id/idjava"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:background="@drawable/round_back_white10">
                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="140dp"
                    android:src="@drawable/java"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="24dp"
                    android:textColor="@color/black"
                    android:text="Java"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:paddingVertical="5dp"
                android:id="@+id/idphp"
                android:layout_marginStart="20dp"
                android:background="@drawable/round_back_white10">
                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="140dp"
                    android:src="@drawable/php"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="24dp"
                    android:textColor="@color/black"
                    android:text="php"/>
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingVertical="5dp"
                android:gravity="center_horizontal"
                android:id="@+id/idandroid"
                android:background="@drawable/round_back_white10">
                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="140dp"
                    android:src="@drawable/android_icon"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="24dp"
                    android:textColor="@color/black"
                    android:text="Android"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:layout_marginStart="20dp"
                android:paddingVertical="5dp"
                android:id="@+id/idhtml"
                android:background="@drawable/round_back_white10">
                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="140dp"
                    android:src="@drawable/html_5"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="24dp"
                    android:textColor="@color/black"
                    android:text="HTML"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/idLLLyout"
        android:id="@+id/idButton"
        android:layout_centerHorizontal="true"
        android:text="Start Game"
        android:textSize="22sp"
        android:background="@drawable/round_start_game"
        android:elevation="10dp"
        android:paddingHorizontal="70dp"
        android:textColor="@color/white"
        android:layout_marginTop="10dp"
        android:textAllCaps="false"/>
</RelativeLayout>